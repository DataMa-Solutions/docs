source "https://rubygems.org"

# Thème par défaut
gem "minima", "~> 2.5"

# Plugins Jekyll
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-sitemap", "~> 1.4.0"
end

# Windows : dépendances spécifiques
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
  gem "wdm", ">= 0.2.0"
end

# Gems nécessaires avec Ruby 3.4+
gem "webrick", "~> 1.7"
gem "csv"
gem "bigdecimal"
gem "logger"
gem "base64", "~> 0.1.1"

# ✅ Version de Jekyll compatible Ruby 3.4
gem "jekyll", "~> 4.3.2"
