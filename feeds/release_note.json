---
---
[
  {% assign posts = site.posts | where_exp: "item", "item.feed == 'release_note'" %}
  {% for post in posts %}
  {
    {% if forloop.first %}
    "latest": "True",
    {% endif %}
    "title": "{{ post.title | escape }}",
    "date": "{{post.date}}",
    "url": "{{site.url}}/{{site.baseurl}}{{post.url}}",
    {% if post.description %}
      "description": "{{ post.description | replace: '"', "'" | replace: '<li>', "* " | replace: '<strong>', "**" | replace: '</strong>', "**" | replace: '<ul>', "" | strip_newlines | strip_html | strip | escape }}"
      {% else %}
      "description": "{{ post.content | replace: '"', "'" | replace: '<li>', "* " | replace: '<strong>', "**" | replace: '</strong>', "**" | replace: '<ul>', "" | strip_newlines | strip_html | strip | escape }}"
    {% endif %}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
